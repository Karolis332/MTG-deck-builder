{
  "name": "the-black-grimoire",
  "version": "1.0.0-alpha.2",
  "description": "A dark-themed desktop grimoire for building, analyzing, and mastering Magic: The Gathering decks",
  "author": "QuLeR",
  "private": true,
  "main": "electron-dist/electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build && node scripts/postbuild-standalone.js",
    "start": "next start",
    "lint": "next lint",
    "db:seed": "tsx src/db/seed.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:python": "py -m pytest scripts/tests/ -v",
    "test:all": "vitest run && py -m pytest scripts/tests/ -v",
    "build:electron": "tsc -p tsconfig.electron.json",
    "dev:electron": "node -e \"const p=process.env.PORT||'3000';require('child_process').execSync(`npx concurrently \\\"next dev --port ${p}\\\" \\\"wait-on http://localhost:${p} && electron --no-sandbox .\\\"`,{stdio:'inherit',env:{...process.env,PORT:p}})\"",
    "dist:electron": "concurrently \"npm:build\" \"npm:build:electron\" && electron-builder",
    "dist:win": "concurrently \"npm:build\" \"npm:build:electron\" && electron-builder --win",
    "dist:mac": "concurrently \"npm:build\" \"npm:build:electron\" && electron-builder --mac",
    "dist:linux": "concurrently \"npm:build\" \"npm:build:electron\" && electron-builder --linux",
    "dist:all": "concurrently \"npm:build\" \"npm:build:electron\" && electron-builder --win --mac --linux",
    "dist:portable": "concurrently \"npm:build\" \"npm:build:electron\" && electron-builder --win portable",
    "dist:zip": "concurrently \"npm:build\" \"npm:build:electron\" && electron-builder --win zip --mac zip --linux tar.gz",
    "update:arena-cards": "node scripts/download_arena_card_db.js",
    "postinstall": "electron-builder install-app-deps || true"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "better-sqlite3": "^11.7.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "jose": "^6.1.3",
    "lucide-react": "^0.469.0",
    "next": "^14.2.21",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.15.0",
    "stream-json": "^1.9.1",
    "tailwind-merge": "^2.6.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^5.1.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.21",
    "postcss": "^8.4.49",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18",
    "wait-on": "^8.0.2"
  }
}
